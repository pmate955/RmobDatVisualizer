<Window x:Class="RmobDatVisualizer.GUI.Windows.BitmapViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RmobDatVisualizer.GUI.Windows"
        mc:Ignorable="d"
        Title="BitmapViewerWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Button Grid.Column="0" Content="Save Image" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10,10,0,0" Click="SaveButton_Click" Padding="10,10,10,10"/>
            <Button Grid.Column="0" Content="Copy to clipboard" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,10,10,10" Click="CopyToClipboardBtn_Click" Padding="10,10,10,10"/>
            <Image Grid.Column="1" Grid.RowSpan="2" x:Name="ImageControl" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
